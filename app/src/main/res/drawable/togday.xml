<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@android:color/white"/>
            <size
                android:height="3dp"
                android:width="3dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/sun"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/baseline_wb_sunny_24"
        android:top="3dp"
        android:bottom="3dp"
        android:left="5dp"
        android:right="5dp"/>


</layer-list>