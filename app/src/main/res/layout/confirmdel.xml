<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/conformtext"
                    android:text="Confirm Delete?"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/newpurp"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            <EditText
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@android:color/black"
                android:id="@+id/filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter file name (No extension req)"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <LinearLayout
                android:id="@+id/selview"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@android:color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Selected File"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@android:color/black"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selected"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/yes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:backgroundTint="@color/newpurp"
                    app:cornerRadius="10dp"
                    android:layout_alignParentStart="true" />
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/no"
                    android:backgroundTint="@color/newpurp"
                    app:cornerRadius="10dp"
                    android:layout_alignParentEnd="true" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>