<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Classname"
                android:textColor="@color/white"
                    android:id="@+id/course"
                    android:textSize="25dp"
                    android:textStyle="italic" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textColor="@color/test"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Batch:"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textColor="@color/test"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Batchname"
                android:id="@+id/batch"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_alignParentStart="true"
                android:textColor="@color/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Course Code:"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Course code value"
                android:textColor="@color/test"
                android:id="@+id/code"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/test"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Credit:"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:id="@+id/credit"
                android:textColor="@color/test"
                android:text="Credit value"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Type:"
                android:id="@+id/typest"
                android:textColor="@color/test"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Type value"
                android:layout_toEndOf="@+id/typest"
                android:textColor="@color/test"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/delview"
                android:layout_height="30dp"
                android:src="@drawable/baseline_delete_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                app:tint="@color/lightGrey" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>