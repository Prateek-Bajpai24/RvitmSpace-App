<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/newpurp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/secname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Textbooks/Referencesdddddddd"
                    android:maxWidth="220dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_centerVertical="true"
                    android:id="@+id/deletesection"
                    android:layout_marginEnd="60dp"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_centerVertical="true"
                    android:id="@+id/addsection"
                    android:layout_marginEnd="100dp"
                    android:layout_alignParentEnd="true"
                    app:tint="@android:color/white" />
                <RelativeLayout
                    android:id="@+id/expsection"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/circle_purple"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />
                    <ImageView
                        android:id="@+id/expbutton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                       android:src="@drawable/baseline_expand_less_24"
                        app:tint="@android:color/black" />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:visibility="gone"
            android:id="@+id/notext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_draw"
            android:text="Nothing to show for this section"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/border_draw"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:id="@+id/putmaterial"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>